<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".fragments.SettingsFragment"
    android:padding="10dp">


    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Pes Patron recommends &#128054;"
        android:layout_centerHorizontal="true"
        android:textStyle="bold"
        android:textSize="18sp"/>

    <RelativeLayout
        android:id="@+id/dbButtons"
        android:layout_marginTop="30dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true">

    <Button
        android:id="@+id/btnSetSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="set Sales"/>

    <Button
        android:layout_marginStart="5dp"
        android:id="@+id/btnUnsetSales"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Unset Sales"
        android:layout_toEndOf="@+id/btnSetSales"/>

        <Button
            android:id="@+id/btnLogOut"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Log Out"
            android:layout_toEndOf="@+id/btnUnsetSales"/>

    </RelativeLayout>

    <RelativeLayout
        android:layout_marginTop="10dp"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/dbButtons"
        android:layout_centerHorizontal="true">

        <Button
            android:id="@+id/btnCheckNotPer"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Check Notifications Permission"/>

        <Switch
            android:id="@+id/switchNotification"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="App Notifications"
            android:layout_below="@+id/btnCheckNotPer"/>

        <pl.droidsonroids.gif.GifImageView
            android:id="@+id/pesGif"
            android:layout_width="200dp"
            android:layout_height="200dp"
            android:layout_below="@+id/switchNotification"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="20dp"
            android:src="@drawable/norm_pes_patron"/>


    </RelativeLayout>





</RelativeLayout>